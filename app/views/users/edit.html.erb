<h1>User settings</h1>
<%= form_for current_user, :url => update_profile_path, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.label :avatar %>:<br/>
    <%= image_tag(current_user.avatar_url) if current_user.avatar? %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </p>
  <p>
    <%= f.label :username %>:<br/>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %>:<br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %>:<br/>
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :voice_only, 'Never use the SMS interface with my phone'%>:
    <%= f.check_box :voice_only %>
  </p>
  <p>
    <%= f.label :profession %>:<br/>
    <%= f.text_field :profession %>
  </p>
  <p>
    <%= f.label :profile %>:<br/>
    <%= f.text_area :profile %>
  </p>
  <p>
    <%= f.label :location, 'Street address' %>:<br/>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :city %>:<br/>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %>:<br/>
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :zip %>:<br/>
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.label :generalize_location, "Don't show my exact address in requests and offers" %>:
    <%= f.check_box :generalize_location %>
  </p>
  <p class="controls">
    <%= f.submit "Save profile" %>
    <%= link_to "Delete account", destroy_profile_path, :method => :delete, :confirm => "Are _really_ you sure you want to delete your account?" %>
  </p>
<% end %>